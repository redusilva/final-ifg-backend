{
    "BasicDiscipline": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "example": "John Doe"
            },
            "description": {
                "type": "string",
                "format": "email"
            }
        },
        "required": [
            "name",
            "description"
        ]
    },
    "Schedule": {
        "type": "object",
        "properties": {
            "day_of_week": {
                "type": "number",
                "example": 0
            },
            "start_time": {
                "type": "string",
                "example": "HH:mm"
            },
            "end_time": {
                "type": "string",
                "example": "HH:mm"
            }
        },
        "required": [
            "day_of_week",
            "start_time",
            "end_time"
        ]
    },
    "Discipline": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "format": "uuid"
            },
            "name": {
                "type": "string",
                "example": "John Doe"
            },
            "description": {
                "type": "string",
                "format": "email"
            },
            "classroom_id": {
                "type": "string",
                "format": "uuid"
            },
            "teacher_id": {
                "type": "string",
                "format": "uuid"
            },
            "students": {
                "type": "array",
                "items": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "schedule": {
                "$ref": "#/components/schemas/Schedule"
            },
            "created_at": {
                "type": "string",
                "format": "date-time"
            },
            "updated_at": {
                "type": "string",
                "format": "date-time"
            }
        },
        "required": [
            "name",
            "description"
        ]
    },
    "DisciplineReport": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "format": "uuid"
            },
            "name": {
                "type": "string",
                "example": "John Doe"
            },
            "description": {
                "type": "string",
                "format": "email"
            },
            "classroom": {
                "type": "object",
                "$ref": "#/components/schemas/Classroom"
            },
            "teacher": {
                "type": "object",
                "$ref": "#/components/schemas/User"
            },
            "students": {
                "type": "array",
                "items": {
                    "type": "object",
                    "$ref": "#/components/schemas/User"
                }
            },
            "schedule": {
                "$ref": "#/components/schemas/Schedule"
            },
            "created_at": {
                "type": "string",
                "format": "date-time"
            },
            "updated_at": {
                "type": "string",
                "format": "date-time"
            }
        },
        "required": [
            "name",
            "description"
        ]
    },
    "DisciplineSummary": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "example": "60f7d5c8c2a4e53f8c4f0d1b"
            },
            "name": {
                "type": "string",
                "example": "Cálculo I"
            },
            "description": {
                "type": "string",
                "example": "Estudo de limites, derivadas e integrais."
            },
            "start_time": {
                "type": "string",
                "example": "08:00"
            },
            "end_time": {
                "type": "string",
                "example": "10:00"
            },
            "classroom_name": {
                "type": "string",
                "example": "Sala 101"
            },
            "teacher_name": {
                "type": "string",
                "example": "Prof. Dr. João da Silva"
            }
        }
    },
    "DisciplineDayReport": {
        "type": "object",
        "properties": {
            "count": {
                "type": "integer",
                "example": 1
            },
            "classes": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/DisciplineSummary"
                }
            }
        }
    }
}