{
    "/discipline": {
        "post": {
            "summary": "Criar disciplina",
            "description": "Este endpoint é utilizado para cadastrar disciplinas. <br /> <br /> OBS: Essa rota permite criar apenas a disciplina, sem vincular professores ou alunos, então na resposta os campos 'students', 'teacher_id' e 'schedule' sempre virão como arrays vazios.",
            "tags": [
                "Disciplina"
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/BasicDiscipline"
                        }
                    }
                }
            },
            "responses": {
                "201": {
                    "description": "Operação realizada com sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Discipline"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Operação inválida!",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/OperationError"
                            }
                        }
                    }
                },
                "500": {
                    "description": "Erro interno no servidor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InternalServerError"
                            }
                        }
                    }
                }
            }
        },
        "get": {
            "summary": "Busca todas as disciplinas",
            "description": "Este endpoint é utilizado para buscar todas as disciplinas cadastradas no sistema com seus respectivos professores e alunos",
            "tags": [
                "Disciplina"
            ],
            "responses": {
                "200": {
                    "description": "Operação realizada com sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/DisciplineReport"
                                }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Erro interno no servidor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InternalServerError"
                            }
                        }
                    }
                }
            }
        }
    },
    "/discipline/day/{day}": {
        "get": {
            "summary": "Busca disciplinas por dia da semana",
            "description": "Este endpoint é utilizado para buscar as disciplinas agendadas para um dia específico da semana. Use um número de 0 (Domingo) a 6 (Sábado).",
            "tags": [
                "Horário da Disciplina"
            ],
            "parameters": [
                {
                    "name": "day",
                    "in": "path",
                    "description": "Dia da semana (0-6)",
                    "required": true,
                    "schema": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 6
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Operação realizada com sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DisciplineDayReport"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Dia da semana inválido",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/OperationError"
                            }
                        }
                    }
                },
                "500": {
                    "description": "Erro interno no servidor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InternalServerError"
                            }
                        }
                    }
                }
            }
        }
    },
