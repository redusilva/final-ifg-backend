                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InternalServerError"
                            }
                        }
                    }
                }
            }
        },
        "delete": {
            "summary": "Deletar horário de aula",
            "description": "Este endpoint é utilizado para deletar um horário específico da disciplina. É necessário enviar no corpo da requisição o 'day_of_week' e o 'start_time' para identificar qual horário remover.",
            "tags": [
                "Horário da Disciplina"
            ],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "ID da disciplina",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "day_of_week": {
                                    "type": "number",
                                    "example": 1
                                },
                                "start_time": {
                                    "type": "string",
                                    "example": "08:00"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200": {
